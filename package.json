{
    "name": "websocket-chat",
    "version": "1.0.0",
    "description": "Simple chat app",
    "main": "app.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:client": "webpack --config-name client --env prod",
        "build:server": "webpack --config-name server --env prod",
        "build": "webpack --env prod",
        "start": "cd dist && node server.js",
        "dev:server": "webpack --config-name server -w",
        "dev:client": "webpack-dev-server --config-name client --port 5000 --hot",
        "dev": "concurrently --names \"BACK,CLIENT\" -c \"bgMagenta.bold,bgGreen.bold\" \"npm run dev:server\" \"npm run dev:client\"",
        "lint": "prettier --write src/**/*.{tsx,ts,css} && tslint --fix src/**/*.{ts,tsx}"
    },
    "author": "Egor Blagov",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "prettier --write",
            "tslint --fix",
            "git add"
        ],
        "src/**/*.css": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@fortawesome/fontawesome-common-types": "^0.2.25",
        "@types/bootstrap": "^4.3.1",
        "@types/classnames": "^2.2.9",
        "@types/color": "^3.0.0",
        "@types/express": "^4.17.1",
        "@types/lodash": "^4.14.141",
        "@types/node": "^12.12.6",
        "@types/react": "^16.9.5",
        "@types/react-bootstrap": "^0.32.20",
        "@types/react-dom": "^16.9.1",
        "@types/sha1": "^1.1.2",
        "@types/socket.io": "^2.1.4",
        "@types/socket.io-client": "^1.4.32",
        "@types/winston": "^2.4.4",
        "concurrently": "^5.0.0",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.0.0",
        "ts-loader": "^6.2.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.1.0",
        "typescript": "^3.6.3",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2",
        "webpack-node-externals": "^1.7.2",
        "webpack-shell-plugin": "^0.5.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "@fortawesome/free-solid-svg-icons": "^5.11.2",
        "@fortawesome/react-fontawesome": "^0.1.7",
        "@types/source-map-support": "^0.5.0",
        "bootstrap": "^4.3.1",
        "classnames": "^2.2.6",
        "color": "^3.1.2",
        "express": "^4.17.1",
        "lodash": "^4.17.19",
        "react": "^16.10.2",
        "react-bootstrap": "^1.0.0-beta.14",
        "react-dom": "^16.10.2",
        "sha1": "^1.1.1",
        "socket.io": "^2.3.0",
        "socket.io-client": "^2.3.0",
        "source-map-support": "^0.5.13",
        "winston": "^3.2.1"
    }
}
